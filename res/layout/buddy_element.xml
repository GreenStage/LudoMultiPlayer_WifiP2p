<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

   >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="@drawable/whitegradient">
    <TextView
        android:id="@+id/buddy_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:text="TESTE"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="18dp"
        />
    <TextView
        android:id="@+id/buddy_status"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:text="TESTE22"
        android:layout_toRightOf="@id/buddy_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="21dp"
        />
    <ImageView
        android:id="@+id/buddy_icon"
        android:layout_width="60dp"
        android:layout_marginLeft="10dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/buddy_status" />
    <ImageView
        android:id="@+id/buddy_icon2"
        android:layout_width="60dp"
        android:layout_marginLeft="10dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/buddy_icon" /></RelativeLayout>
</RelativeLayout>