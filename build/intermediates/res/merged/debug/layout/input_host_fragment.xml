<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:name="rmsf.eduardodiogo.ludo3wifi.InputHostInfoFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#DD313131"
    android:id="@+id/dkv1">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please specify a visible display name:"
        android:textColor="#FFFFFF"
        android:id="@+id/disp1"
        android:textSize="20sp"
        />
    <EditText
        android:id="@+id/inptUsername"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/disp1"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Input a display name here"
        android:background="@color/background_holo_dark"
        />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DD313131"
        android:id="@+id/dkv2"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/dkv1">
<TextView
    android:layout_marginTop="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="(Optional) A visible room name:"
    android:textColor="#FFFFFF"
    android:id="@+id/disp2"
    android:textSize="20sp"
    />
<EditText
    android:id="@+id/roomName"
    android:layout_marginTop="5dp"
    android:layout_below="@+id/disp2"
    android:inputType="text"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:hint="Input room name Here"
    android:background="@color/background_holo_dark"

    />
    </RelativeLayout>
<Button
    android:id="@+id/button2"
    android:layout_below="@+id/dkv2"
    android:layout_marginTop="15dp"
    android:layout_width="120dp"
    android:onClick="StartRoom"
    android:layout_height="50dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_centerVertical="true"
    android:text="Create Room"
    android:background="@color/btnPrm"
    android:textColor="#ffffff"
    android:textStyle="bold"
    />
</RelativeLayout>